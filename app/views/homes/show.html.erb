  <%= link_to "Search Books", new_search_path, class: 'btn btn-xlg btn-success', style: 'color: #fff' %>
</div>
<div class="btn-group float_btn" role="group">
  <%= link_to "All Books", books_path, class: 'btn btn-xlg btn-primary', style: 'color: #fff' %>
</div>
