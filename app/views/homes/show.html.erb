	<div class="btn-group float_btn" role="group">
	  <%= link_to "Manage Users", users_path, class: 'btn btn-xlg btn-danger', style: 'color: #fff' %>
	</div>
	<div class="btn-group float_btn" role="group">
	  <%= link_to "Manage Books", books_path, class: 'btn btn-xlg btn-info', style: 'color: #fff' %>
